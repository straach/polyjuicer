{
    "manifest_version": 2,
  
    "name": "polyjuicer",
    "description": "JWT User Hot-Switcher",
    "version": "0.0.1",
  
    "browser_action": {
      "default_popup": "popup.html",
      "default_title": "Polyjuice!"
    },
    "icons": {},
    "permissions": [
        "webRequest", 
        "webRequestBlocking",
        "*://localhost/",
        "*://*.mydomain.com/",
        "cookies"
    ],
    "background": {
        "scripts": ["background.js"]
    }
  }