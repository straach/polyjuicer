{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": false,
        "removeComments": false,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "outDir": "./out",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node"
        ]
    },
    "exclude": [
        "node_modules",
        "built-tsc"
    ],
    "extends": "tslint-config-airbnb",
    "rules": {
        "no-return-await": true,
        "max-line-length": false,
        "indent": [true, "spaces", 4],
        "ter-indent": false
    }
}